package org.learningformat.api;

/**
 * An interaction between two named entities.
 * 
 * @author Peter Palaga
 * 
 */
public interface Pair extends Element {

	/**
	 * @return first interacting entity.
	 */
	public Entity getE1();

	/**
	 * @param e1
	 *            first interacting entity.
	 */
	public void setE1(Entity e1);

	/**
	 * @return second interacting entity.
	 */
	public Entity getE2();

	/**
	 * @param e2
	 *            second interacting entity.
	 */
	public void setE2(Entity e2);
	
	public boolean isInteraction();
	public void setInteraction(boolean interaction);


}